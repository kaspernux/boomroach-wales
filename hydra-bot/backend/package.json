    "cookie-parser": "^1.4.6",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "prisma": "^5.7.1",
    "@prisma/client": "^5.7.1",
    "socket.io": "^4.7.4",
    "redis": "^4.6.11",
    "ioredis": "^5.3.2",
    "@solana/web3.js": "^1.87.6",
    "@solana/wallet-adapter-base": "^0.9.23",
    "tweetnacl": "^1.0.3",
    "bs58": "^5.0.0",
    "axios": "^1.6.2",
    "node-fetch": "^3.3.2",
    "ws": "^8.14.2",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.3",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.1",
    "uuid": "^9.0.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "decimal.js": "^10.4.3",
